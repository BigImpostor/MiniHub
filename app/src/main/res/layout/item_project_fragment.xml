<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/project_img"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/project_img"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black_light"
            android:text="开源小程序 - 趣闻 QNews_we_chat"
            />

        <TextView
            android:id="@+id/project_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/project_img"
            android:layout_below="@id/project_title"
            android:maxLines="3"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:text="小程序 的火热程度我就不多说了，我之前对这个就蛮有兴趣的，于是花了大概5天的时间，完成了 学习-入门-写项目 这一套流程。"
            />


        <TextView
            android:id="@+id/project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/project_img"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:text="ME"
            />

        <TextView
            android:id="@+id/project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="一天前"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>